@model List<ResultSendboxMessageDto>

@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h4 class="card-title text-center text-primary fw-bold">📤 Gönderilen Mesajlar</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-hover table-bordered text-center align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Alıcı</th>
                                        <th>Konu</th>
                                        <th>Mesaj</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                        <th>Mesajı Aç</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr class="@(item.IsRead ? "" : "table-warning fw-bold")">
                                            <th class="bg-light">@count</th>
                                            <td>@item.ReceiverId</td>
                                            <td>@item.Subject</td>
                                            <td class="text-truncate" style="max-width: 250px;">@item.MessageDetail</td>
                                            <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
                                            <td>
                                                <span class="badge @(item.IsRead ? "bg-success" : "bg-danger")">
                                                    @(item.IsRead ? "Okundu" : "Okunmadı")
                                                </span>
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                                    ❌ Sil
                                                </a>
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-outline-info btn-sm rounded-pill px-3">
                                                    📬 Mesajı Aç
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
