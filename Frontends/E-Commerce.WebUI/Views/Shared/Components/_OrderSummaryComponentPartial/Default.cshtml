@model List<BasketItemDto>

<div class="checkout-summary">
    <h1>Sipariş Özeti</h1>

    <h6 class="mb-3">Sipariş Ürün Listesi</h6>
    @foreach (var item in Model)
    {
        <div class="d-flex justify-content-between">
            <p>@item.ProductName (@item.Quantity)</p>
            <h6>@item.Price ₺</h6>
        </div>
    }

    <div class="border-top pt-3">
        <div class="d-flex justify-content-between mb-3">
            <h6>Alışveriş Tutarı (KDV dahil)</h6>
            <h6>3600 ₺</h6>
        </div>

        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">70 ₺</h6>
        </div>
    </div>

    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>3670 ₺</h5>
        </div>
    </div>
</div>
