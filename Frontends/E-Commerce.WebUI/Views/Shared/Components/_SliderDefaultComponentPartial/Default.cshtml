@model List<ResultFeatureSliderDto>

<div class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <nav class="navbar bg-light">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-home"></i>Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-shopping-bag"></i>Çok Satanlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-plus-square"></i>Moda ve Giyim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-female"></i>Elektronik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-child"></i>Ev ve Yaşam</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-tshirt"></i>Spor ve Outdoor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-mobile-alt"></i>Kozmetik ve Kişisel Bakım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-microchip"></i>Kitap, Hobi ve Oyuncak</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-md-6">
                <div class="header-slider normal-slider">
                    @foreach(var item in Model)
                    {
                        <div class="header-slider-item">
                            <img src="@item.ImageUrl" alt="Slider Image" />
                            <div class="header-slider-caption">
                                <p>@item.Description</p>
                                <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Alışveriş Yap</a>
                            </div>
                        </div>
                    }          
                </div>
            </div>
            @await Component.InvokeAsync("_TopDiscountComponentPartial")
        </div>
    </div>
</div>