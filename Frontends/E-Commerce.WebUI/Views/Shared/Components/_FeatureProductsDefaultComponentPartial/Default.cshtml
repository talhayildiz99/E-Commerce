@model List<ResultProductDto>

<style>
    .product-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .product-image {
        display: flex;
        justify-content: center; /* Yatayda ortalama */
        align-items: center; /* Dikeyde ortalama */
        height: 400px; /* Tüm resimlerin aynı yükseklikte olması için */
        overflow: hidden; /* Büyük resimleri keser */
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Resmin kırpılmasını sağlar ama boyutu eşit tutar */
            display: block;
        }

    .product-price {
        text-align: left;
        font-size: 18px;
        font-weight: bold;
    }

    .btn {
        background-color: #ff6b6b;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

        .btn i {
            margin-right: 5px;
        }
</style>

<div class="featured-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h1>Öne Çıkan Ürünler</h1>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3">
                    <div class="product-item">
                        <div class="product-title">
                            <a href="/ProductList/ProductDetail/@item.ProductId">@item.ProductName</a>
                            <div class="ratting">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                        <div class="product-image">
                            <a href="/ProductList/ProductDetail/@item.ProductId">
                                <img src="@item.ProductImageUrl" alt="Product Image">
                            </a>
                        </div>
                        <div class="product-price">
                            <h3><span>₺</span>@item.ProductPrice</h3>
                            <a class="btn" href="/ProductList/ProductDetail/@item.ProductId"><i class="fa fa-shopping-cart"></i> Hemen Satın Al</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
