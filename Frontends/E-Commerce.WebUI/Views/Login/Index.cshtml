@model CreateLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>E-Commerce - Giriş Yap</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link rel="stylesheet" type="text/css" href="~/register_template/css/opensans-font.css">
	<link rel="stylesheet" type="text/css" href="~/register_template/fonts/line-awesome/css/line-awesome.min.css">
	<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
	<link rel="stylesheet" href="~/register_template/css/style.css" />
	<style>
		.form-left img {
			width: 100%;
			height: 700px;
			object-fit: cover;
		}

		.form-v7-content {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 20px;
		}

		.password-toggle {
			cursor: pointer;
			position: absolute;
			right: 15px;
			top: 35px;
		}

		.password-container {
			position: relative;
		}

		.login-button {
			background-color: #4CAF50;
			color: white;
			border: none;
			padding: 12px 24px;
			font-size: 16px;
			border-radius: 5px;
			cursor: pointer;
			transition: background-color 0.3s ease;
		}

			.login-button:hover {
				background-color: #45a049;
			}

		.form-row-last {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 10px;
		}

			.form-row-last p {
				margin: 0;
			}
	</style>
</head>
<body class="form-v7">
	<div class="page-content">
		<div class="form-v7-content">
			<div class="form-left">
				<img src="~/register_template/images/form-v7.jpg" alt="form">
				<p class="text-1">Giriş Yap</p>
				<p class="text-2">Gizlilik Politikası & Hizmet Şartları</p>
			</div>
			<form class="form-detail" method="post" id="loginForm">
				<div class="form-row">
					<label for="username">KULLANICI ADI</label>
					<input type="text" id="username" asp-for="Username" class="input-text" name="Username" required>
				</div>
				<div class="form-row password-container">
					<label for="password">ŞİFRE</label>
					<input type="password" id="password" asp-for="Password" class="input-text" name="Password" required>
					<span class="password-toggle" onclick="togglePassword('password')">👁️</span>
				</div>
				<div class="form-row-last">
					<button type="submit" class="login-button">Giriş Yap</button>
					<span>veya</span>
					<a href="/Register/Index/">Kayıt Ol</a>
				</div>
			</form>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script>
		function togglePassword(id) {
			const passwordField = document.getElementById(id);
			const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
			passwordField.setAttribute('type', type);
		}

		jQuery.validator.setDefaults({
			debug: false,
			success: function (label) {
				label.attr('id', 'valid');
			},
		});
		$("#loginForm").validate({
			rules: {
				Username: {
					required: true
				},
				Password: {
					required: true
				}
			},
			messages: {
				Username: {
					required: "Lütfen Kullanıcı Adınızı Girin"
				},
				Password: {
					required: "Lütfen Şifrenizi Girin"
				}
			}
		});
	</script>
</body>
</html>
